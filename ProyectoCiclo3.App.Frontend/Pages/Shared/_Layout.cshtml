<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fly Emirates</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Fly Emirates</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-size: 12px;">
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<IdentityUser> SignInManager
                    @if (SignInManager.IsSignedIn(User))
                    {

                        <ul class="navbar-nav flex-grow-1">
                            <!--
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                            -->
                            <!--
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Usuario/Create">Crear Usuario</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Usuario/List">Listar Usuarios</a>
                            </li>
                            -->
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Avion/Create">Crear avion</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Avion/List">Listar aviones</a>
                            </li>           
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Aeropuerto/Create">Crear aeropuerto</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Aeropuerto/List">Listar aeropuertos</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Ruta/Create">Crear ruta</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Ruta/List">Listar rutas</a>
                            </li>

                        </ul>
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Fly Emirates - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

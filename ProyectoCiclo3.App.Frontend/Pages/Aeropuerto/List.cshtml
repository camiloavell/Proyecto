@page
@model ProyectoCiclo3.App.Frontend.Pages.ListaAeropuertoModel
@{
}
 
<h1>Listado de Aeropuertos</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th style="text-align: center;" scope="col">#</th>
      <th style="text-align: center;" scope="col">Sigla</th>
      <th style="text-align: center;" scope="col">Nombre</th>
      <th style="text-align: center;" scope="col">Pais</th>
      <th style="text-align: center;" scope="col">Tipo</th>
      <th style="text-align: center;" scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var aeropuerto in Model.Aeropuertos)
    {
        <tr>
            <td style="text-align: center;">@aeropuerto.id</td>
            <td style="text-align: center;">@aeropuerto.sigla</td>
            <td style="text-align: center;">@aeropuerto.nombre</td>
            <td style="text-align: center;">@aeropuerto.pais</td>
            <td style="text-align: center;">@aeropuerto.tipo</td>
            <td style="text-align: center;">
              <div class="">
                <a class="btn btn-info" asp-page="./Details" asp-route-aeropuertoId="@aeropuerto.id">Ver</a>
                <a class="btn btn-info" asp-page="./Edit" asp-route-aeropuertoId="@aeropuerto.id">Editar</a>
                <form method="POST" class="col-12 p0 m0">
                  <input type="number" class="d-none" id="id" asp-for="@aeropuerto.id">
                  <a class="btn btn-danger" href="">Eliminar</a>
                </form>
              </div>
            </td>
        </tr>
    }   
  </tbody>
</table>
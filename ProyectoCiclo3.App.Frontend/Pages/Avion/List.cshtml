@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAvionModel
@{
}
 
<h1>Listado de Aviones</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th style="text-align: center;" scope="col">#</th>
      <th style="text-align: center;" scope="col">Marca</th>
      <th style="text-align: center;" scope="col">Modelo</th>
      <th style="text-align: center;" scope="col">Número asientos</th>
      <th style="text-align: center;" scope="col">Número baños</th>
      <th style="text-align: center;" scope="col">Capacidad máxima</th>
      <th style="text-align: center;" scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var avion in Model.Aviones)
    {
        <tr>
            <td style="text-align: center;">@avion.id</td>
            <td style="text-align: center;">@avion.marca</td>
            <td style="text-align: center;">@avion.modelo</td>
            <td style="text-align: center;">@avion.numero_asientos</td>
            <td style="text-align: center;">@avion.numero_banos</td>
            <td style="text-align: center;">@avion.capacidad_maxima</td>
            <td style="text-align: center;">
              <div class="">
                <a class="btn btn-info" asp-page="./Details" asp-route-avionId="@avion.id">Ver</a>
                <a class="btn btn-info" asp-page="./Edit" asp-route-avionId="@avion.id">Editar</a>
                <form method="POST">
                  <input type="number" class="d-none" id="id" asp-for="@avion.id">
                  <a class="btn btn-danger" href="">Eliminar</a>
                </form>
              </div>
            </td>
        </tr>
    }   
  </tbody>
</table>